<div class="entry-widget">
    <h5 class="widget-title">{{ widget.title }}</h5>
    <!-- Accordion  -->
    <div class="accordion">
        <div class="panel-group" id="accordion">
            <!-- Start Accordion 1 -->
            <div class="panel panel-default">
                <!-- Toggle Headin -->
                {% for category in categories %}
                <h4 class="panel-title">
                    <a href="/blog/posts/categories/{{ category.alias }}/{{ category.id }}">
                        <i class="ico-keyboard_arrow_right"></i>
                        {{ category.name }}
                    </a>
                </h4>
                {% endfor %}
            </div>
        </div>
    </div>
</div>